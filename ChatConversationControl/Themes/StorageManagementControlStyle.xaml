<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:controls="clr-namespace:ChatConversationControl.Controls">

    <Style TargetType="{x:Type controls:StorageManagementControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:StorageManagementControl}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <ui:TextBox x:Name="NewIndexNameTextBox" Width="100" Margin="5" PlaceholderText="Element Name" 
                                        Text="{Binding NewElementName, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />
                            <Button Content="Add" Command="{Binding AddIndexCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                    CommandParameter="{Binding Text, ElementName=NewIndexNameTextBox}" />
                        </StackPanel>

                        <ui:DataGrid ItemsSource="{Binding StorageIndexes, RelativeSource={RelativeSource TemplatedParent}}" AutoGenerateColumns="False" Margin="5">
                            <ui:DataGrid.Columns>
                                <DataGridTextColumn Header="Index" Binding="{Binding}" Width="*" />
                                <DataGridTemplateColumn Header="Actions" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remove"
                                                    Command="{Binding RemoveIndexCommand, RelativeSource={RelativeSource AncestorType=controls:StorageManagementControl}}"
                                                    CommandParameter="{Binding}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>

                        <!-- ListBox to display enumeration of storage indexes -->
                        <ListBox ItemsSource="{Binding StorageIndexes, RelativeSource={RelativeSource TemplatedParent}}" 
                                 SelectedItem="{Binding SelectedItem, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" 
                                 Margin="5">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
